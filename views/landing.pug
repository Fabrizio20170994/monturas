  .btn-group(role='group' aria-label='Basic example')
    form.campos(action='/ventas' method='post')
      button.btn-sm.btn-primary(type='submit') Consultar Ventas
    form.campos(action='/monturas' method='post')
      button.btn-sm.btn-primary(type='submit') Consultar Stock de Montura
    form.campos(action='/movimientos' method='post')
      button.btn-sm.btn-primary(type='submit') Movimientos según Montura
      select#exampleFormControlSelect1.form-control(name= 'montura_movimientos')
         each val in tablas.monturas
             option(value= val.CODIGO_MONTURA)= val.CODIGO_MONTURA
    form.campos(action='/seguimiento' method='post')
      button.btn-sm.btn-primary(type='submit') Seguimiento de Ventas
      input#exampleInputPassword1.form-control(type='text' name='codigo_seguimiento' placeholder='Código de Venta')

.container-fluid.registro
  p.h2.titulo Registrar Venta
  form.campos(action='/' method='post')
    .form-row
      .form-group.col-md-6
        label(for='exampleInputEmail1') Cliente
        select#exampleFormControlSelect1.form-control(name= 'venta_codigo_cliente')
            each val in tablas.clientes
                option(value= val.CODIGO_CLIENTE)= val.NOMBRE
      .form-group.col-md-6
        label(for='exampleInputPassword1') Modalidad
        select#exampleFormControlSelect1.form-control(name= 'venta_modalidad')
            option(value="Efectivo") Efectivo
            option(value="Tarjeta") Tarjeta
    .form-row
      .form-group.col-md-6
        label(for='exampleInputPassword1') C&oacute;digo de Montura
        select#exampleFormControlSelect1.form-control(name= 'venta_codigo_montura')
            each val in tablas.monturas
                option(value= val.CODIGO_MONTURA)= val.CODIGO_MONTURA
      .form-group.col-md-6
        label(for='exampleInputPassword1') Vendedor
        select#exampleFormControlSelect1.form-control(name= 'venta_codigo_vendedor')
            each val in tablas.vendedores
                option(value= val.CODIGO_VENDEDOR)= val.NOMBRE
    .form-row
      .form-group.col-md-6
        label(for='exampleInputPassword1') Medida Principal
        input#exampleInputPassword1.form-control(type='text' name='venta_medida_p' placeholder='Medida Principal')
      .form-group.col-md-6
        label(for='exampleInputPassword1') Medida Secundaria
        input#exampleInputPassword1.form-control(type='text' name='venta_medida_s' placeholder='Medida Secundaria')
    .form-row
      .form-group.col-md-6
        label(for='exampleInputPassword1') Cantidad
        input#exampleInputPassword1.form-control(type='text' name='venta_cantidad' placeholder='Cantidad')
      .form-group.col-md-6
        label(for='exampleInputPassword1') Monto
        input#exampleInputPassword1.form-control(type='text' name='venta_monto' placeholder='S/.')
    .form-row
      .form-group.col
        label(for='exampleInputPassword1') Fecha de Venta
        input#exampleInputPassword1.form-control(type='date' name='fecha_venta' placeholder='Fecha')
    button.btn.btn-primary(type='submit') Registrar Venta


.container-fluid.registro
  p.h2.titulo Consultar Tops
  p.h4 Vendedores
  form.campos(action='/vendedores' method='post')
    .form-row
      .form-group.col-md-6
        label(for='exampleInputEmail1') Número de Vendedores a mostrar
        input#exampleInputPassword1.form-control(type='text' name='n_vendedores' placeholder='Número de Vendedores')
      .form-group.col-md-6
        label(for='exampleInputPassword1') Año a filtrar
        input#exampleInputPassword1.form-control(type='text' name='año_vendedores' placeholder='Año')
    button.btn.btn-primary(type='submit') Consultar Top Vendedores
.container-fluid.registro
